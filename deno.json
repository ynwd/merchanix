{
  "tasks": {
    "app": "deno run -A build/watch.ts & deno run -A --unstable-kv --watch main.ts 3000",
    "main": "deno run --allow-net main.ts",
    "native": "deno run --allow-net native.ts",
    "start": "ENV=production deno run -A --unstable-kv main.ts",
    "test": "deno test -A",
    "build": "deno run -A build/build.ts",
    "build:spa": "deno run -A build/spa.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@1",
    "@std/testing": "jsr:@std/testing@1",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.17",
    "autoprefixer": "npm:autoprefixer@^10.4.22",
    "cssnano": "npm:cssnano@^7.1.2",
    "react": "npm:react@^19.2.0",
    "react/jsx-runtime": "npm:react@^19.2.0/jsx-runtime",
    "react/jsx-dev-runtime": "npm:react@^19.2.0/jsx-dev-runtime",
    "react-dom": "npm:react-dom@^19.2.0",
    "jose": "npm:jose@5.9.6",
    "esbuild": "npm:esbuild@0.25.3",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.0",
    "postcss": "npm:postcss@^8.5.6",
    "tailwindcss": "npm:tailwindcss@^4.1.17"
  },
  "compilerOptions": {
    "lib": [
      "deno.worker",
      "deno.unstable",
      "deno.ns",
      "deno.window",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "npm:@types/react@^19",
      "npm:@types/react-dom@^19"
    ]
  },
  "nodeModulesDir": "auto"
}
